<struts>
	<package name="device" extends="struts-base" namespace="/device">
	
	<!-- 用户设备绑定 -->
	<action name="deviceBind" class="com.gzjky.action.device.deviceAction" method="deviceBind">

	</action>
	<!-- 设备信息查询 -->
	<action name="queryDeviceBySid" class="com.gzjky.action.device.deviceAction" method="queryDeviceBySid">

	</action>
	
	<!-- 绑定设备信息查询 -->
	<action name="queryMemberBindDevice" class="com.gzjky.action.device.deviceAction" method="queryMemberBindDevice">

	</action>


	<!-- 解除绑定设备 -->
	<action name="deleteMemberDeviceBind" class="com.gzjky.action.device.deviceAction" method="deleteMemberDeviceBind">

	</action>
	
	<!-- 设备阈值设置 -->
	<action name="insertMemberBloodPressureThreshold" class="com.gzjky.action.device.deviceAction" method="insertMemberBloodPressureThreshold">

	</action>
	<!-- 修改血压通知-->
	<action name="updateBloodPressureNotice" class="com.gzjky.action.device.deviceAction" method="updateBloodPressureNotice">

	</action>
	</package>
</struts>
